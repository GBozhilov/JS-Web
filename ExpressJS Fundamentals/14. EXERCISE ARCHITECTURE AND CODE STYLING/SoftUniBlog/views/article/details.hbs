<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>{{content}}</p>

                <small class="author">{{author.fullName}}</small>

                <small>{{dateStr}}</small>

                <footer>
                    <div class="pull-right">
                        {{#if isAdmin}}
                            <a class="btn btn-danger btn-xs" href="/article/delete/{{_id}}">Delete &raquo;</a>
                            <a class="btn btn-success btn-xs" href="/article/edit/{{_id}}">Edit &raquo;</a>
                        {{else}}
                            {{#if isAuthor}}
                                <a class="btn btn-success btn-xs" href="/article/edit/{{_id}}">Edit &raquo;</a>
                            {{/if}}
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>

